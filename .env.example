# =============================================================================
# DAPK System Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# Database Configuration
# =============================================================================
DB_PASSWORD=changeme_use_strong_password
DATABASE_URL=postgresql+asyncpg://dapk_user:${DB_PASSWORD}@postgres:5432/dapk

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=changeme_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# File uploads
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=10

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/v1
NODE_ENV=development

# =============================================================================
# Redis Cache (Optional)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_DB=0

# =============================================================================
# Email Configuration (Optional, for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@dapk.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=DAPK System <noreply@dapk.com>
SMTP_USE_TLS=true

# =============================================================================
# Monitoring & Logging (Optional)
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=

# =============================================================================
# External Services (Future)
# =============================================================================
# SMS Gateway
SMS_GATEWAY_API_KEY=
SMS_GATEWAY_URL=

# Push Notifications
FCM_SERVER_KEY=

# Object Storage (S3-compatible)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=dapk-uploads
